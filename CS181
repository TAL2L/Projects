            ++freq3;
            
        }else if (cards[random] == "Diamonds"){ // check if the index of array equal "Diamonds" if its true increase it by 1  
            ++freq4;
	}
}
	printf("\n\t\t\tHearts%16d\n  Player 3\t\tSpades%16d\n\t\t\tClubs%17d\n\t\t\tDiamonds%14d\n ", freq1,freq2,freq3,freq4);
	printf("--------------------------------------------------");
	
	
	maxCardsPlayer3 = freq1; 
	if (freq2 >maxCardsPlayer3) // if statement to comparing between two number which the highest
	{
		maxCardsPlayer3 = freq2;
	}
	if (freq3 > maxCardsPlayer3) // if statement to comparing between two number which the highest
