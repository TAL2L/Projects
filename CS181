#include <stdio.h>
#include <stdlib.h>
#include <time.h>
int player1(int maxCardsPlayer1 ); // prototype for player1 with parameter maxCardsPlayer1 that returns the max of his cards
int player2(int maxCardsPlayer2); // prototype for player2 with parameter maxCardsPlayer2 that returns the max of his cards
int player3(int maxCardsPlayer3); // prototype for player3 with parameter maxCardsPlayer3 that returns the max of his cards
int player4(int maxCardsPlayer4); // prototype for player4 with parameter maxCardsPlayer4 that returns the max of his cards
int winner(int maxCardsPlayer1,int maxCardsPlayer2 ,int maxCardsPlayer3 ,int maxCardsPlayer4); // prototype for winner with 4 parameter that takes the maximum frequency for all players
int main (){ // main function
int x; // integer
int y; // integer
int z; // integer
int k; // integer
int maxPlayerOne = player1(x); // to store Maximum frequency for player 1
int maxPlayerTwo  = player2(y); // to store Maximum frequency for player 2
int maxPlayerThree  = player3(z); // to store Maximum frequency for player 3
int maxPlayerFour  = player4(k); // to store Maximum frequency for player 4
winner(maxPlayerOne,maxPlayerTwo,maxPlayerThree,maxPlayerFour); // function that prints the winner player  


    return 0; 
}
int winner(int maxCardsPlayer1,int maxCardsPlayer2,int maxCardsPlayer3 ,int maxCardsPlayer4){ //define winner function
	int max; // integer max to store the maximum value
	max = maxCardsPlayer1;	// Assume that frequency one is the largest		
	if ( max < maxCardsPlayer2){ 
		max = maxCardsPlayer2; // Assume that frequency two is the largest

	}
	if (max < maxCardsPlayer3){
		max = maxCardsPlayer3; // Assume that frequency three is the largest
	}
	if (max < maxCardsPlayer4){
		max = maxCardsPlayer4; // Assume that frequency four is the largest
	}
	
	if(max ==maxCardsPlayer1&& max == maxCardsPlayer2){
		printf("\n\n\n  [ ######## No one won! Game is Draw  ######## ]\n\n");  //check if the condtion is true then dispaly Draw
	}
	else if(max ==maxCardsPlayer1&& max == maxCardsPlayer3){
		printf("\n\n\n  [ ######## No one won! Game is Draw  ######## ]\n\n");  //check if the condtion is true then dispaly Draw
	}
	else if(max ==maxCardsPlayer1&& max == maxCardsPlayer4){
		printf("\n\n\n  [ ######## No one won! Game is Draw  ######## ]\n\n"); //check if the condtion is true then dispaly Draw, if its false lost message
	}
	else if(max ==maxCardsPlayer2&& max == maxCardsPlayer3){
		printf("\n\n\n  [ ######## No one won! Game is Draw  ######## ]\n\n"); //check if the condtion is true then dispaly Draw, if its false lost message
	}
	else if(max ==maxCardsPlayer2&& max == maxCardsPlayer4){
		printf("\n\n\n  [ ######## No one won! Game is Draw  ######## ]\n\n"); //check if the condtion is true then dispaly Draw, if its false lost message
	}
	else if(max == maxCardsPlayer3 && max == maxCardsPlayer4){
		printf("\n\n\n  [ ######## No one won! Game is Draw  ######## ]\n\n");  //check if the condtion is true then dispaly Draw
	}
	else if(max ==maxCardsPlayer1){
		printf("\n\n\n  [ ######## The winner is Player 1 ######## ]\n\n"); //check if the condtion is true then dispaly The winner is Player 1, if its false lost message
	}
	else if(max ==maxCardsPlayer2){
		printf("\n\n\n  [ ######## The winner is Player 2 ######## ]\n\n"); //check if the condtion is true then dispaly The winner is Player 2, if its false lost message
	}
	else if(max == maxCardsPlayer3){
		printf("\n\n\n  [ ######## The winner is Player 3 ######## ]\n\n"); //check if the condtion is true then dispaly The winner is Player 3, if its false lost message
	}
	else if(max == maxCardsPlayer4){
		printf("\n\n\n  [ ######## The winner is Player 4 ######## ]\n\n"); //check if the condtion is true then dispaly The winner is Player 4, if its false lost message
	}
	return 0;
}

int player1(int maxCardsPlayer1){
	char* cards[4]={"Hearts", "Spades", "Clubs", "Diamonds"}; // arays that contains the name of cards
    int random; // int
    int i; //counter
    int freq1 = 0; // calculate the frequency of card 1
    int freq2 = 0; // calculate the frequency of card 2
    int freq3 = 0; // calculate the frequency of card 3 
    int freq4 = 0; // calculate the frequency of card 4
    
  	srand(time(NULL)); // it makes random number per time
    printf("\n [Players Name]\t\t[Cards]\t\t[Frequency]\n");
    printf("---------------------------------------------------");
    for (i=1; i<=13;i++){ // loop conating if to calculate freqency
        random = (rand() % 4); // random containg a random numbers between 0 to 3
        if (cards[random] == "Hearts"){ // check if the index of array equal "Hearts" if its true increase it by 1 
            ++freq1;
            
        }else if (cards[random] =="Spades"){ // check if the index of array equal "Spades" if its true increase it by 1 
            ++freq2;
           
        }else if (cards[random] == "Clubs"){ // check if the index of array equal "Clubs" if its true increase it by 1 
            ++freq3;
            
        }else if (cards[random] == "Diamonds"){ // check if the index of array equal "Diamonds" if its true increase it by 1  
            ++freq4;
	}
}
		printf("\n\t\t\tHearts%16d\n  Player 1\t\tSpades%16d\n\t\t\tClubs%17d\n\t\t\tDiamonds%14d\n ", freq1,freq2,freq3,freq4);
		printf("--------------------------------------------------");

	
	maxCardsPlayer1 = freq1; 
	if (freq2 >maxCardsPlayer1) // if statement to comparing between two number which the highest
	{
		maxCardsPlayer1 = freq2;
	}
	if (freq3 > maxCardsPlayer1) // if statement to comparing between two number which the highest
	{
		maxCardsPlayer1 = freq3;
	}
	if (freq4 >maxCardsPlayer1) // if statement to comparing between two number which the highest
	{
		maxCardsPlayer1 = freq4;
	}
	return maxCardsPlayer1; //returning the highest frequency of cards
    
}
